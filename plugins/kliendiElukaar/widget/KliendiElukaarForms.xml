<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-form.xsd">
    <form name="AddClient" type="single" target="createClient">
        <auto-fields-service service-name="createClient"/>
        <field name="kliendiTypeId" title="${uiLabelMap.CommonType}">
            <drop-down allow-empty="false" current-description="">
                <entity-options description="${description}" key-field-name="kliendiTypeId" entity-name="KliendiType">
                    <entity-order-by field-name="description"/>
                </entity-options>
            </drop-down>
        </field>
        <field name="submitButton" title="${uiLabelMap.CommonAdd}"><submit button-type="button"/></field>
    </form>


    <form name="FindClient" type="single" target="FindClient" default-entity-name="Kliendielukaar">
        <field name="noConditionFind"><hidden value="Y"/> <!-- if this isn't there then with all fields empty no query will be done --></field>
        <field name="klientId" title="${uiLabelMap.KlientId}"><text-find/></field>
        <field name="firstName" title="${uiLabelMap.KliendiFirstName}"><text-find/></field>
        <field name="lasttName" title="${uiLabelMap.KliendiLasttName}"><text-find/></field>
        <field name="kliendiTypeId" title="${uiLabelMap.KliendiType}">
            <drop-down allow-empty="true" current-description="">
                <entity-options description="${description}" key-field-name="kliendiTypeId" entity-name="KliendiType">
                    <entity-order-by field-name="description"/>
                </entity-options>
            </drop-down>
        </field>

        <field name="searchButton" title="${uiLabelMap.CommonFind}" widget-style="smallSubmit"><submit button-type="button" image-location="/images/icons/magnifier.png"/></field>
    </form>


    <form name="ListClient" type="list" list-name="listIt" paginate-target="FindClient" default-entity-name="Kliendielukaar" separate-columns="true">
        <actions>
            <service service-name="performFind" result-map="result" result-map-list="listIt">
                <field-map field-name="inputFields" from-field="kliendiElukaarCtx"/>
                <field-map field-name="entityName" value="kliendiElukaar"/>
                <field-map field-name="orderBy" from-field="parameters.sortField"/>
                <field-map field-name="viewIndex" from-field="viewIndex"/>
                <field-map field-name="viewSize" from-field="viewSize"/>
            </service>
        </actions>
        <field name="klientId" title="${uiLabelMap.KlienditId}"><display/></field>
        <field name="kliendiTypeId" title="${uiLabelMap.KliendiType}"><display-entity entity-name="KliendiType"/></field>
        <field name="firstName" title="${uiLabelMap.KliendiFirstName}" sort-field="true"><display/></field>
        <field name="lastName" title="${uiLabelMap.KliendiLastName}" sort-field="true"><display/></field>
    </form>
</forms>