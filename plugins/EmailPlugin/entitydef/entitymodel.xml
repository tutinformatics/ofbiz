<entitymodel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/entitymodel.xsd">

    <title>EmailTemplate entity</title>
    <description>None</description>
    <version>1.0</version>

    <entity entity-name="EmailPluginType" package-name="org.apache.ofbiz.email" title="EmailPlugin Type Entity">
        <field name="EmailPluginTypeId" type="id"><description>primary sequenced ID</description></field>
        <field name="description" type="description"></field>
        <prim-key field="EmailPluginTypeId"/>
    </entity>

    <entity entity-name="EmailPlugin" package-name="org.apache.ofbiz.email" title="EmailPlugin Entity">
        <field name="EmailPluginId" type="id"><description>primary sequenced ID</description></field>
        <field name="EmailPluginTypeId" type="id"></field>
        <field name="firstName" type="name"></field>
        <field name="lastName" type="name"></field>
        <field name="comments" type="comment"></field>
        <prim-key field="EmailPluginId"/>
        <relation type="one" fk-name="ODEM_OD_TYPE_ID" rel-entity-name="EmailPluginType">
            <key-map field-name="EmailPluginTypeId"/>
        </relation>
    </entity>

</entitymodel>